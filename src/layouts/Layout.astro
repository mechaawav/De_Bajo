---
const { title = 'De_Bajo' } = Astro.props;
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>

    <!-- Fuentes -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Oswald:wght@700;900&display=swap" rel="stylesheet" />

    <!-- ======================  CSS GLOBAL (inline)  ====================== -->
    <style is:global>
      /* ====== Tema ====== */
      :root{
        --bg-red: #b74339;         /* rojo principal */
        --bg-red-deep:#8f3028;     /* sombras */
        --ink: #0a0a0a;            /* negro para títulos */
        --text:#1b1b1b;            /* texto en paneles */
        --paper:#ffffff;           /* papel */
        --paper-dot: rgba(0,0,0,.10);
        --line: rgba(0,0,0,.10);
        --muted:#6a6a6a;
        --brand:#e06a5f;           /* acento para links/brand */
        --radius: 20px;
        --shadow: 0 18px 60px rgba(0,0,0,.35);
      }

      /* ===== Reset + base ===== */
      *{box-sizing:border-box}
      html,body{height:100%;margin:0}
      img,video{max-width:100%;height:auto;display:block}
      button,input,textarea,select{font:inherit;color:inherit}
      html{background:var(--bg-red)}
      body{
        background:var(--bg-red);
        color:#fff;
        font-family: system-ui,-apple-system,Segoe UI,Roboto,Ubuntu,Cantarell,"Helvetica Neue",Arial;
        -webkit-font-smoothing:antialiased; -moz-osx-font-smoothing:grayscale;
        overflow-x:hidden; position:relative;
      }

      /* ===== Grano + viñeta ===== */
      body::before{
        content:""; position:fixed; inset:0; pointer-events:none; z-index:0;
        background-image:url("data:image/svg+xml;utf8,\
<svg xmlns='http://www.w3.org/2000/svg' width='120' height='120' viewBox='0 0 120 120'>\
<filter id='n'><feTurbulence type='fractalNoise' baseFrequency='.9' numOctaves='4' stitchTiles='stitch'/></filter>\
<rect width='100%' height='100%' filter='url(%23n)' opacity='.14'/></svg>");
        mix-blend-mode:multiply; opacity:.35;
      }
      body::after{
        content:""; position:fixed; inset:-10vmax; pointer-events:none; z-index:0;
        background:
          radial-gradient(90vmax 90vmax at 50% -10%, transparent 45%, rgba(0,0,0,.35) 100%),
          radial-gradient(140vmax 100vmax at 120% 120%, transparent 40%, rgba(0,0,0,.45) 100%),
          radial-gradient(140vmax 100vmax at -20% 120%, transparent 40%, rgba(0,0,0,.45) 100%);
      }

      /* ===== Layout helpers ===== */
      .container{width:min(1120px,100%);padding:0 16px;margin:0 auto;position:relative;z-index:1}
      .section{padding:90px 0;border-top:1px solid rgba(0,0,0,.04)}
      .section:first-of-type{border-top:0}
      .section-title{
        font-family:"Oswald",system-ui; font-weight:900; text-transform:uppercase;
        letter-spacing:.06em; color:var(--ink);
        font-size: clamp(40px, 12vw, 120px); line-height:.9; margin:0 0 28px;
        text-shadow:0 6px 0 var(--bg-red-deep), 0 10px 30px rgba(0,0,0,.35);
      }
      .kicker{
        display:block; font-weight:800; letter-spacing:.18em;
        color:var(--brand); text-transform:uppercase; margin-bottom:10px;
      }

      /* ===== Navbar negro ===== */
      .navbar{
        position:sticky; top:0; z-index:60;
        background:#0b0b0c; border-bottom:1px solid rgba(255,255,255,.08);
      }
      .navbar-inner{height:66px; display:flex; align-items:center; justify-content:space-between}
      .brand{font-weight:900; letter-spacing:.14em; color:var(--brand); text-decoration:none}
      .nav-links a{
        color:#e6b3ae; text-decoration:none; text-transform:uppercase;
        letter-spacing:.14em; margin-left:22px; font-size:13px; opacity:.9;
      }
      .nav-links a:hover{opacity:1; text-decoration:underline}
      .mobile-toggle{
        display:none; align-items:center; justify-content:center;
        width:40px; height:40px; border:1px solid rgba(255,255,255,.15);
        background:#111; color:#e6b3ae; border-radius:10px; cursor:pointer;
      }

      /* Drawer móvil */
      .nav-drawer{
        position:fixed; inset:66px 0 0 0; background:#0b0b0c; display:none;
        flex-direction:column; gap:12px; padding:18px; border-top:1px solid rgba(255,255,255,.08);
      }
      .nav-drawer a{ color:#e6b3ae; text-decoration:none; text-transform:uppercase; letter-spacing:.18em; font-size:14px; padding:10px 2px }
      .nav-drawer a:hover{ text-decoration:underline }

      /* ===== Hero ===== */
      .hero{display:grid; grid-template-columns:1fr auto; gap:32px; align-items:center; padding:84px 0; position:relative}
      .hero-title{
        font-family:"Oswald",system-ui; font-weight:900;
        text-transform:uppercase; color:var(--ink);
        font-size: clamp(56px, 14vw, 180px); line-height:.85; letter-spacing:.05em;
        position:relative;
      }
      .hero-title .a-block{ position:absolute; left:52%; top:8%; width:13%; height:72%; background:#fff; z-index:-1; box-shadow:var(--shadow) }
      .hero-sub{ margin-top:8px; font-size: clamp(14px, 2.6vw, 22px); text-transform:uppercase; letter-spacing:.18em; color:#101010; text-shadow:0 2px 8px rgba(0,0,0,.45) }
      .hero-side{ align-self:start; padding-top:16px; display:grid; gap:8px; font-size:12px; letter-spacing:.18em; text-transform:uppercase; color:#111; text-shadow:0 2px 8px rgba(0,0,0,.45) }
      .polaroid{ position:absolute; right:5%; bottom:-4%; width:min(280px,32vw); background:#fff; color:#fff; transform:rotate(-6deg); box-shadow: var(--shadow); padding:12px 12px 24px; border-radius:8px; border:1px solid rgba(0,0,0,.12) }
      .polaroid .ph{background:#000; height:180px; border-radius:4px}
      .polaroid .caption{margin-top:10px; color:#de6a5e; font-weight:700; letter-spacing:.12em}

      /* ===== Panel “papel con puntitos” ===== */
      .panel{
        background:
          radial-gradient(circle at 1px 1px, var(--paper-dot) 1px, transparent 1.2px) 0 0/12px 12px,
          var(--paper);
        color:var(--text);
        border:1px solid var(--line);
        border-radius: var(--radius);
        box-shadow: var(--shadow);
        padding: 26px;
      }

      /* ===== Grillas ===== */
      .bios{ display:grid; grid-template-columns:1fr 1fr; gap:22px }
      .cards{ display:grid; grid-template-columns:repeat(3,1fr); gap:26px }

      .card{
        background:
          radial-gradient(circle at 1px 1px, var(--paper-dot) 1px, transparent 1.2px) 0 0/12px 12px,
          var(--paper);
        border:1px solid var(--line); border-radius:18px; box-shadow:var(--shadow);
        position:relative; overflow:hidden; min-height:420px; display:flex; flex-direction:column; justify-content:flex-end;
        transition: transform .25s ease, box-shadow .25s ease;
      }
      .card:hover{ transform: translateY(-6px) scale(1.02); box-shadow:0 22px 70px rgba(0,0,0,.45) }
      .card .meta{display:flex; justify-content:space-between; align-items:center; padding:18px 18px 16px; color:#212121}
      .edition{font-weight:900; letter-spacing:.12em; text-transform:uppercase}
      .link{color:#a7433a; text-decoration:none; font-weight:800; letter-spacing:.18em}
      .link:hover{text-decoration:underline}
      .badge{
        position:absolute; left:16px; top:16px; font-size:12px; font-weight:900; letter-spacing:.18em; text-transform:uppercase;
        padding:6px 10px; border-radius:8px;
      }
      .badge.ok{background:#0e0e10; color:#fce1de; border:1px solid rgba(255,255,255,.12)}
      .badge.soon{background:#c34f45; color:#fff; border:1px solid rgba(0,0,0,.18)}

      /* ===== Contacto / formularios ===== */
      .contact .panel form{ display:grid; gap:16px }
      .contact .panel .two-col{ display:grid; grid-template-columns:1fr 1fr; gap:16px }
      .contact .panel input, .contact .panel textarea{
        width:100%; padding:12px 14px; border-radius:10px;
        border:1px solid rgba(0,0,0,.12); background:#fff; color:#111;
      }
      .contact .panel textarea{min-height:160px; resize:vertical}
      .btn-primary{
        display:inline-block; padding:12px 18px; border-radius:10px;
        background:#0c0c0e; color:#e9b3ad; border:1px solid rgba(255,255,255,.12);
        font-weight:900; letter-spacing:.2em; text-transform:uppercase; text-decoration:none;
      }
      .btn-primary:hover{filter:brightness(1.1)}

      /* ===== Footer negro ===== */
      footer{ margin-top:100px; background:#0b0b0c; color:#e9b3ad; border-top:1px solid rgba(255,255,255,.08) }
      .foot-inner{height:68px; display:flex; align-items:center; justify-content:center; letter-spacing:.18em; text-transform:uppercase; font-weight:900}

      /* ====== Responsivo ====== */
      /* tablet */
      @media (max-width: 1024px){
        .cards{ grid-template-columns:repeat(2,1fr) }
        .hero{ grid-template-columns: 1fr 1fr }
        .polaroid{ right:2%; width:min(260px,36vw) }
      }
      /* mobile */
      @media (max-width: 800px){
        .nav-links{ display:none }
        .mobile-toggle{ display:inline-flex }
        .nav-drawer.show{ display:flex }

        .hero{ grid-template-columns:1fr; gap:18px; padding:56px 0 }
        .hero-title .a-block{ display:none }       /* sacamos el bloque blanco en pantallas chicas */
        .polaroid{ position:static; transform:none; margin-top:12px; width:80% }
        .bios{ grid-template-columns:1fr }
      }
      /* mobile chico */
      @media (max-width: 560px){
        .section{ padding:64px 0 }
        .section-title{ font-size: clamp(34px, 10vw, 60px) }
        .cards{ grid-template-columns:1fr }
        .card{ min-height:360px; border-radius:14px }
        .panel{ border-radius:14px; padding:18px }
        .contact .panel .two-col{ grid-template-columns:1fr } /* inputs apilados */
      }
    </style>
  </head>
  <body>
    <slot />

    <!-- Footer global -->
    <footer>
      <div class="container foot-inner">© 2025 DE_BAJO — REVISTA DIGITAL MENSUAL.</div>
    </footer>
  </body>
</html>
