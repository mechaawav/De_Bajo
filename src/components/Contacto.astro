<section id="contacto" class="section">
<div class="container contact">
<h2 style="margin:0 0 16px; font-size:32px; letter-spacing:.1em;">Contacto</h2>
<form class="shadow-card" style="padding:18px; display:grid; gap:12px;" method="post" action="/api/contact">
<input required type="text" name="name" placeholder="Tu nombre" />
<input required type="email" name="email" placeholder="Tu correo" />
<textarea required name="message" rows="5" placeholder="Contanos tu consulta"></textarea>
<button class="btn" type="submit">Enviar</button>
</form>
</div>
</section>